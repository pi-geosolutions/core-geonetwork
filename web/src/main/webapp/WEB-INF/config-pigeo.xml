			</class>
			<output sheet="../xslt/pigeo/geoportal/layertree-2json.xsl" contentType="text/plain; charset=UTF-8"/>
		</service>
		<service name="pigeo.layertree.admin.backups.remove">
			<class name="org.fao.geonet.pigeosolutions.geoportal.services.layertree.Backups">
				<param name="mode" value="remove"/>
